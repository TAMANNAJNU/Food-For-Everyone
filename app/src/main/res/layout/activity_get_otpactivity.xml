<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".GetOTPActivity">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/verified"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="OTP Verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="12dp"
        android:textColor="#3F7F87"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        tools:text="OTP Will Send To Your Number"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/otpTextId"
        android:textSize="13dp"
        android:textColor="#30818A"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        tools:text="01555555555"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/otpCodeId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Enter Your OTP Here"
        android:inputType="number"
        android:maxLength="6"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:drawableEndCompat="@drawable/ic_star"
        app:drawableTint="@color/red" />

    <Button
        android:id="@+id/verifyOTPBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_rounded"
        android:text="Verify"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>