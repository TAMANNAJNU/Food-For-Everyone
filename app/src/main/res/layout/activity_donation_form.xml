<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".DonationFormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/donationform"
                android:layout_width="200dp"
                android:layout_height="100dp"/>

            <TextView
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:text="Donation Form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/donationNameId"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Your Full Name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:drawableEndCompat="@drawable/ic_star"
                app:drawableTint="@color/red" />


            <EditText
                android:id="@+id/donationMobileNoId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Your Mobile Number"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="11"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:drawableEndCompat="@drawable/ic_star"
                app:drawableTint="@color/red" />

            <EditText
                android:gravity="start"
                android:inputType="textMultiLine"
                android:textAlignment="textStart"
                android:id="@+id/donationAddressId"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Your Address"
                android:importantForAutofill="no"
                android:maxLines="2"
                android:maxLength="35"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:drawableEndCompat="@drawable/ic_star"
                app:drawableTint="@color/red" />

            <EditText
                android:id="@+id/donationDescriptionId"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Your Food Donation Description"
                android:importantForAutofill="no"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:maxLines="2"
                android:maxLength="50"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:drawableEndCompat="@drawable/ic_star"
                app:drawableTint="@color/red" />

            <Button
                android:id="@+id/donationSubmitBtnId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_rounded"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/regProgressBarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

</RelativeLayout>